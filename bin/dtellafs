#!/usr/bin/env ruby

require 'rubygems'
require 'bundler/setup'
require 'dtellafs'

directory = File.expand_path('../tmp', __FILE__)
FileUtils.mkdir_p directory

class HelloDir
  def contents(path)
    ['hello.txt']
  end
  def size(path)
    read_file(path).size
  end
  def file?(path)
    path == '/hello.txt'
  end
  def read_file(path)
    "Hello, World!\n"
  end
end

hellodir = HelloDir.new
FuseFS.set_root( hellodir )

# Mount under a directory given on the command line.
FuseFS.mount_under directory
FuseFS.run
